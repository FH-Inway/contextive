{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "build",
                "${workspaceRoot}/src/Ubictionary.LanguageServer/Ubictionary.LanguageServer.fsproj",
                // Ask dotnet build to generate full paths for file names.
                "/property:GenerateFullPaths=true",
                // Do not generate summary otherwise it leads to duplicate errors in Problems panel
                "/consoleloggerparameters:NoSummary"
            ],
            "options": {
                "cwd": "${workspaceFolder}/src/Ubictionary.LanguageServer"
            },
            "group": "build",
            "problemMatcher": "$msCompile"
        },
        {
            "label": "build tests",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "build",
                "${workspaceRoot}${config:languageServerTestsPath}/Ubictionary.LanguageServer.Tests.fsproj",
                // Ask dotnet build to generate full paths for file names.
                "/property:GenerateFullPaths=true",
                // Do not generate summary otherwise it leads to duplicate errors in Problems panel
                "/consoleloggerparameters:NoSummary"
            ],
            "options": {
                "cwd": "${workspaceFolder}${config:languageServerTestsPath}"
            },
            "group": "build",
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch tests",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "watch",
                "run"
            ],
            "options": {
                "cwd": "${workspaceFolder}${config:languageServerTestsPath}"
            },
            "group": "test",
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch-build vsCode extension",
			"type": "npm",
			"script": "watch",
			"problemMatcher": [ ],
			"isBackground": true,
			"presentation": {
				"reveal": "never",
				"group": "watchers"
			},
			"group": "build",
            "options": {
                "cwd": "${workspaceFolder}${config:vsCodeExtensionPath}"
            },
		},
		{
            "label": "watch-build vsCode extension tests",
			"type": "npm",
			"script": "watch-tests",
			"problemMatcher": [],
			"isBackground": true,
			"presentation": {
				"reveal": "never",
				"group": "watchers"
			},
			"group": "build",
            "options": {
                "cwd": "${workspaceFolder}${config:vsCodeExtensionPath}"
            },
		},
		{
			"label": "tasks: watch vsCode extension tests",
			"dependsOn": [
				"npm: watch",
				"npm: watch-tests"
			],
			"problemMatcher": []
		}
    ]
}